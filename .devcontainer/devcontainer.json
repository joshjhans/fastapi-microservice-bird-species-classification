{
  "name": "bird-species-image-classification",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "target": "devl"
  },
  "runArgs": ["--name", "bird-species-image-classification", "--gpus", "all"],
  "customizations": {
    "settings": {
      "python.defaultInterpreterPath": "/opt/conda/envs/${localEnv:ENV_NAME}/bin/python"
    },
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-vscode-remote.remote-containers",
        "redhat.vscode-yaml",
        "ms-toolsai.jupyter",
        "esbenp.prettier-vscode",
        "charliermarsh.ruff",
        "Gruntfuggly.todo-tree",
        "njpwerner.autodocstring"
      ]
    }
  },
  "mounts": [
    "source=bird-species-image-classification-bash-history,target=/commandhistory,type=volume",
    "source=${localWorkspaceFolder},target=/bird-species-image-classification,type=bind,consistency=cached"
  ],
  "remoteEnv": {},
  "postCreateCommand": "cd ./src && pip install -r requirements.txt"
}
